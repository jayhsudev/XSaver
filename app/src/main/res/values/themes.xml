<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XSaver" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Background color. -->
        <item name="colorPrimaryContainer">@color/primary_variant</item>
        <item name="colorSecondaryContainer">@color/secondary_variant</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        <!-- Error color. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <!-- Elevation styles. -->
        <item name="elevationOverlayEnabled">true</item>
        <!-- Window styles. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Android 12+ Splash Screen attributes must be framework-prefixed -->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenBackground">@color/primary</item>
    </style>

    <style name="Theme.XSaver.NoActionBar" parent="Theme.XSaver">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Remove invalid Material3 text appearances; Compose handles typography. -->
</resources>